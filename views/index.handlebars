<div class="container">
  <div class="row">
    <div class="col-xs-12">
     <h1>EAT da BURGER</h1>
    </div>
  </div>  
<div class="row">
  <div class="col-xs-12">
    <img src="../../static/images/Hamburger_PNG.png" alt="No Image today. Come back later." />
  </div>
</div>
<div class="row">
  <div class="col-xs-4">    
        {{#each burger_data}}
          {{#if this.devoured}}
            {{else}}
              <div style="border-style: solid; width: 190px; margin-bottom: 20px; padding: 5px; background-color:Orange; color: white;">
                  <div>
                        <pre>{{this.id}}. {{this.name}}</pre>
                        <pre>Burger count: {{this.burger_count}}</pre>
                  </div>
                  <div>
                        <form method="POST" action="/update?_method=PUT">
                              <input type="hidden" type="text" name="burger_id" value={{this.id}}>
                              <button type="submit" class="btn btn-default">Add</button>
                        </form> 
                  </div> 
                  <div>
                        <form method="POST" action="/delete?_method=DELETE">
                              <input type="hidden" type="text" name="member_id" value={{this.id}}><br>
                              <button type="sumbit" class="btn btn-default">Remove</button>
                        </form>
                  </div>
            }
            }
      </div>
      {{/if}}
    {{/each}} 
    </div>
</div>
<div>
</div>

<div>
     <form action="/create" method="POST" style="width: 200px; padding: 6px;">
        <textarea class="form-control" type="text" name="member_name" value="" id="enter_text"></textarea>
        <button type="submit" class="btn btn-primary" id="text-enter-button">Add New</button>
      </form> 
      <p>Add a tasty new burger by entering the burger name.</p>
</div>        